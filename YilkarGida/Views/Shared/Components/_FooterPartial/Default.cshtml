@using DtoLayer.Web.Layout;
@model FooterViewModel


<footer class="w3l-footer-22 position-relative">
    <div class="footer-sub py-5">
        <div class="container py-md-5">
            <div class="row sub-columns">
                <div class="col-lg-6 col-md-6 sub-one-left ab-right-cont pr-lg-5 mb-md-0  mb-4">
                    <h6>@Model.Title</h6>
                    <p>
                        @Model.Description
                    </p>
                    <div class="columns-2">
                        <ul class="social">
                            @if (Model.FacebookStatus)
                            {
                                <li>
                                    <a href="@Model.FacebookLink"><span class="fab fa-facebook-f" aria-hidden="true"></span></a>
                                </li>
                            }
                            @if (Model.LinkedinStatus)
                            {
                                <li>
                                    <a href="@Model.LinkedinLink"><span class="fab fa-linkedin-in" aria-hidden="true"></span></a>
                                </li>
                            }
                            @if (Model.TwitterStatus)
                            {
                                <li>
                                    <a href="@Model.TwitterLink"><span class="fab fa-twitter" aria-hidden="true"></span></a>
                                </li>
                            }
                            @if (Model.GoogleStatus)
                            {
                                <li>
                                    <a href="@Model.GoogleLink"><span class="fab fa-google-plus-g" aria-hidden="true"></span></a>
                                </li>
                            }
                            @if (Model.PinterestStatus)
                            {
                                <li>
                                    <a href="@Model.PinterestLink"><span class="fab fa-pinterest-p" aria-hidden="true"></span></a>
                                </li>
                            }

                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 sub-two-right pl-lg-5">
                    <h6>@Model.PageTitle</h6>
                    <ul>
                        <li>
                            <a href="/Anasayfa/Index/@ViewBag.LanguageID"><span class="fas fa-chevron-right mr-2"></span>@Model.HomePage</a>
                        </li>
                        <li>
                            <a href="/Hakkinda/Index/@ViewBag.LanguageID"><span class="fas fa-chevron-right mr-2"></span>@Model.AboutPage</a>
                        </li>
                        <li><a href="/Iletısım/Index/@ViewBag.LanguageID"><span class="fas fa-chevron-right mr-2"></span>@Model.ContactPage</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 sub-two-right pl-lg-5">
                    <h6>@Model.CategoryTitle</h6>
                    <ul>
                        @if (Model.Category1.Status)
                        {

                            <li>
                                <form method="get" asp-action="Index" asp-controller="Urunler">
                                    <input hidden name="LanguageID" value="@ViewBag.LanguageID">
                                    <input hidden name="CategoryID" value="@Model.Category1.CategoryID">
                                    <button style="background-color:transparent; border:none; padding:0px" class="nav-link"><a>@Model.Category1.Name</a></button>
                                </form>
                            </li>
                        }
                        @if (Model.Category2.Status)
                        {
                            <li>
                                <form method="get" asp-action="Index" asp-controller="Urunler">
                                    <input hidden name="LanguageID" value="@ViewBag.LanguageID">
                                    <input hidden name="CategoryID" value="@Model.Category2.CategoryID">
                                    <button style="background-color:transparent; border:none; padding:0px" class="nav-link"><a>@Model.Category2.Name</a></button>
                                </form>
                            </li>
                        }
                        @if (Model.Category3.Status)
                        {
                            <li>
                                <form method="get" asp-action="Index" asp-controller="Urunler">
                                    <input hidden name="LanguageID" value="@ViewBag.LanguageID">
                                    <input hidden name="CategoryID" value="@Model.Category3.CategoryID">
                                    <button style="background-color:transparent; border:none; padding:0px" class="nav-link"><a>@Model.Category3.Name</a></button>
                                </form>
                            </li>
                        }
                        @if (Model.Category4.Status)
                        {
                            <li>
                                <form method="get" asp-action="Index" asp-controller="Urunler">
                                    <input hidden name="LanguageID" value="@ViewBag.LanguageID">
                                    <input hidden name="CategoryID" value="@Model.Category4.CategoryID">
                                    <button style="background-color:transparent; border:none; padding:0px" class="nav-link"><a>@Model.Category4.Name</a></button>
                                </form>
                            </li>
                        }
                        @if (Model.Category5.Status)
                        {
                            <li>
                                <form method="get" asp-action="Index" asp-controller="Urunler">
                                    <input hidden name="LanguageID" value="@ViewBag.LanguageID">
                                    <input hidden name="CategoryID" value="@Model.Category5.CategoryID">
                                    <button style="background-color:transparent; border:none; padding:0px" class="nav-link"><a>@Model.Category5.Name</a></button>
                                </form>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- copyright -->
    <!-- //copyright -->
</footer>