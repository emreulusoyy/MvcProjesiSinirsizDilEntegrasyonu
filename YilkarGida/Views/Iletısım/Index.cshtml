@using DtoLayer.Web;
@model ContactViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!--/header-->
<!-- breadcrumb -->
<section class="w3l-about-breadcrumb text-center">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5" style="background-image: url(/UserImages/@Model.BannerImage)">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids">
                <div class="w3breadcrumb-left text-left">
                    <h2 class="title AboutPageBanner">
                        @Model.PageName
                    </h2>
                    <p class="inner-page-para mt-2">
                       @Model.PageBannerSubtitle
                        
                    </p>
                </div>
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="/Anasayfa/index/">Ana Sayfa</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> @Model.PageName</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//breadcrumb-->
<!-- contacts-5-grid -->
<div class="w3l-contact-10 py-5" id="contact">
    <div class="form-41-mian pt-lg-4 pt-md-3 pb-lg-4">
        <div class="container">
            <div class="heading text-center mx-auto">
                <h5 class="title-subw3hny text-center">@Model.contactUs</h5>
                <h3 class="title-w3l">@Model.HaveQuestion </h3>
            </div>
            <div class="contacts-5-grid-main mt-5">
                <div class="contacts-5-grid">
                    <div class="map-content-5">
                        <div class="d-grid grid-col-2">
                            <div class="contact-type">
                                <div class="address-grid">
                                    <h6><span class="fas fa-map-marked-alt"></span> @Model.LabelAddress</h6>
                                    <p>@Model.AddressValue</p>

                                </div>
                                <div class="address-grid">
                                    <h6><span class="fas fa-envelope-open-text"></span> @Model.LabelMail</h6>

                                    <a href="mailto:@Model.MailValue" class="link1">@Model.MailValue</a>

                                </div>
                                <div class="address-grid"> 
                                    <h6><span class="fas fa-phone-alt"></span> @Model.LabelPhone</h6>
                                    <a href="tel:@Model.PhoneValue" class="link1">@Model.PhoneValue</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-inner-cont mt-5">
                <form asp-action="ContactMessage" asp-controller="ContactMessage" method="post" class="signin-form">
                    <input hidden name="LanguageID" value="@ViewBag.LanguageID" />
                    <div class="form-grids">
                        <div class="form-input">
                            <input type="text" name="FullName" placeholder="@Model.PlaceholderFullname"
                                   required="" />
                        </div>
                        <div class="form-input">
                            <input type="text" name="Subject" placeholder="@Model.PlaceholderSubject"
                                   required />
                        </div>
                        <div class="form-input">
                            <input type="email" name="Email" placeholder="@Model.PlaceholderMail"
                                   required />
                        </div>
                        <div class="form-input">
                            <input type="text" name="Phone" placeholder="@Model.PlaceholderPhone"
                                   required />
                        </div>
                    </div>
                    <div class="form-input">
                        <textarea name="Message" placeholder="@Model.PlaceholderMessage"
                                  required=""></textarea>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-style btn-primary">@Model.SendButton</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- //contacts-5-grid -->
</div>

<div class="contacts-sub-5">
    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d1505.9664343439981!2d29.2683159!3d40.9829508!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cad051d7b7eb23%3A0xe5560b544030384f!2sYa%C5%9F%20Meyve%20Sebze%20Hali%20%C3%B6zpoyrazlar%20g%C4%B1da%20nak%20oto%20san%20ltd%20%C5%9Fti!5e0!3m2!1str!2str!4v1688238285998!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>
<!--/footer-->

<script>
    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function () {
        scrollFunction()
    };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            document.getElementById("movetop").style.display = "block";
        } else {
            document.getElementById("movetop").style.display = "none";
        }
    }

    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>
